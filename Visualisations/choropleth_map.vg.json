{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Crime in Malaysia",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Data/malaysia.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_10m_admin_1_states_provinces"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/crime_in_states_malaysia_2017.csv"
                },
                "key": "States",
                "fields": [
                    "Ratio"
                ]
            }
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "Ratio",
            "type": "quantitative",
            "scale": {
                "type": "log"
            }
        },
        "tooltip": [
            {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "States"
            },
            {
                "field": "Ratio",
                "type": "quantitative",
                "title": "Total Crimes per 100,000 People"
            }
        ]
    }
}
