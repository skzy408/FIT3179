{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Violent and Property Crimes Reported (2000-2019)"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/crimes_reported_2000-2019.csv"
    },
    "params": [
        {
            "name": "year_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "2000",
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019"
                ],
                "labels": [
                    "2000",
                    "2001",
                    "2002",
                    "2003",
                    "2004",
                    "2005",
                    "2006",
                    "2007",
                    "2008",
                    "2009",
                    "2010",
                    "2011",
                    "2012",
                    "2013",
                    "2014",
                    "2015",
                    "2016",
                    "2017",
                    "2018",
                    "2019"
                ],
                "name": "Year Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": "year_selection == null || datum.Year == year_selection"
            
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Value",
            "type": "quantitative"
        },
        "y": {
            "field": "Type of crime",
            "type": "nominal"
        }
    }
}