{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/total-prisoners-convicted-by-gender-and-state.csv"
  },
  "params": [
    {
      "name": "year_selection",
      "value": "2017",
      "bind": {
        "input": "select",
        "options": [
          "2014",
          "2015",
          "2016",
          "2017"
        ],
        "labels": [
          "2014",
          "2015",
          "2016",
          "2017"
        ],
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "year_selection == null || datum.Year == year_selection"
    }
  ],
  "spacing": 0,
  "hconcat": [
    {
      "transform": [
        {
          "filter": {
            "field": "Gender",
            "equal": "Female"
          }
        }
      ],
      "title": "Female",
      "mark": "bar",
      "width": 450,
      "encoding": {
        "y": {
          "field": "State",
          "axis": null
        },
        "x": {
          "aggregate": "sum",
          "field": "Prisoners",
          "title": "Number of Prisoners",
          "axis": {
            "format": "s"
          },
          "sort": "descending",
          "scale": {"domain": {"unionWith": [0, 11000]}}
        },
        "color": {
          "field": "Gender",
          "scale": {
            "range": [
              "#e7969c",
              "#6b6ecf"
            ]
          },
          "legend": null
        },
        "tooltip": [
          {
            "field": "State",
            "title": "State"
          },
          {
            "field": "Prisoners",
            "title": "Number of Prisoners"
          },
          {
            "field": "Gender",
            "title": "Gender"
          }
        ]
      }
    },
    {
      "width": 20,
      "view": {
        "stroke": null
      },
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {
          "field": "State",
          "type": "ordinal",
          "axis": null
        },
        "text": {
          "field": "State",
          "type": "nominal"
        }
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "Gender",
            "equal": "Male"
          }
        }
      ],
      "title": "Male",
      "width": 450,
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "State",
          "title": null,
          "axis": null
        },
        "x": {
          "aggregate": "sum",
          "field": "Prisoners",
          "title": "Number of Prisoners",
          "axis": {
            "format": "s"
          },
          "scale": {"domain": {"unionWith": [0, 11000]}}
        },
        "color": {
          "field": "Gender",
          "legend": null
        },
        "tooltip": [
          {
            "field": "State",
            "title": "State"
          },
          {
            "field": "Prisoners",
            "title": "Number of Prisoners"
          },
          {
            "field": "Gender",
            "title": "Gender"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "grid": false
    }
  }
}