{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Juvenile Crime",
  "width": 800,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/crimes_committed_by_minors.csv"
  },
  "params": [
    {
      "name": "age_selection",
      "value": "All Ages",
      "bind": {
        "input": "select",
        "options": [
          "10 - 12 years",
          "13 - 15 years",
          "16 - 17 years",
          "18 - 21 years",
          "All Ages"
        ],
        "name": "Age Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "Type of Crime",
        "oneOf": [
          "Property",
          "Drugs",
          "Assault",
          "Traffic",
          "Gambling"
        ]
      }
    },
    {
      "filter": {
        "field": "Gender",
        "oneOf": [
          "Male",
          "Female"
        ]
      }
    },
    {
      "filter": "age_selection == null || datum.Age == age_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Cases",
      "type": "quantitative",
      "title": "Cases"
    },
    "y": {
      "field": "Type of Crime",
      "type": "nominal",
      "title": "Type of Crime",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 0.9
      },
      "encoding": {
        "detail": {
          "field": "Type of Crime",
          "type": "nominal"
        },
        "color": {
          "value": "#716a80"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Gender",
          "type": "ordinal",
          "scale": {
            "domain": [
              "Male",
              "Female"
            ],
            "range": [
              "#6b6ecf",
              "#e7969c"
            ]
          },
          "title": "Gender"
        },
        "size": {
          "value": 100
        },
        "opacity": {
          "value": 1
        },
        "tooltip": [
          {"field": "Type of Crime", "type": "nominal"},
          {"field": "Cases", "type": "quantitative"},
          {"field": "Gender", "type": "nominal"},
          {"field": "Age", "type": "nominal"}
        ]
      }
    }
  ]
}