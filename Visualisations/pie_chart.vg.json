{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/crime_by_category_and_states.csv"
    },
    "encoding": {
      "theta": {"field": "Number", "type": "quantitative", "stack": true},
      "color": {"field": "Crime", "type": "nominal", "legend": null}
    },
    "layer": [{
      "mark": {"type": "arc", "outerRadius": 80}
    }, {
      "mark": {"type": "text", "radius": 90},
      "encoding": {
        "text": {"field": "Crime", "type": "nominal"}
      }
    }]
  }
  