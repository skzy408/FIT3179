{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/skzy408/FIT3179/refs/heads/main/Datasets/crime_by_category_and_states.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "calculate": "datum.Crime === 'Violent' ? 'Violent Crime' : datum.Crime === 'Property' ? 'Property Crime' : datum.Crime",
      "as": "CrimeLabel"
    }
  ],
  "width": "container",
  "height": "container",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "encoding": {
    "theta": {"field": "Total", "type": "quantitative", "stack": true},
    "color": {
      "field": "CrimeLabel",  
      "type": "nominal",
      "scale": {
        "range": ["#8ca252", "#e7ba52"]
      },
      "legend": null
    },
    "tooltip": [
      {"field": "CrimeLabel", "type": "nominal", "title": "Type of Crime"},
      {"field": "Total", "type": "quantitative", "title": "Number of Crimes"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "arc", "outerRadius": 120}
    },
    {
      "mark": {"type": "text", "radius": 150, "fontWeight": "bold"},
      "encoding": {
        "text": {"field": "CrimeLabel"}
      }
    }
  ]
}
